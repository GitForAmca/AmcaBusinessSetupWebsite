@model amca.Models.Validation
<div class="col-md-3 recentPost">
    <div class="row">
        <div class="col-md-12 heading">
            <h4>Recent Post</h4>
        </div>
    </div>
    <div class="row post">
        <div class="col-md-4">
            <img src="~/wimages/ammendment-esr.jpg" class="img-responsive" title="The Amendments to the Economic Substance Regulations in the UAE" alt="The Amendments to the Economic Substance Regulations in the UAE" />
        </div>
        <div class="col-md-8">
            <p class="date">8 Nov 2020</p>
            <h5><a href="@Url.Action("ESRAmmendment", "Insight")">The Amendments to the Economic Substance Regulations in the UAE</a></h5>
        </div>
    </div>
    <div class="row post">
        <div class="col-md-4">
            <img src="~/wimages/esr-overhauling.jpg" class="img-responsive" title="The Overhauling of Economic Substance Regulation in the UAE" alt="The Overhauling of Economic Substance Regulation in the UAE" />
        </div>
        <div class="col-md-8">
            <p class="date">15 Jun 2020</p>
            <h5><a href="@Url.Action("ESRUae", "Insight")">The Overhauling of Economic Substance Regulation in the UAE</a></h5>
        </div>
    </div>
    <div class="row post">
        <div class="col-md-4">
            <img src="~/wimages/esr.jpg" class="img-responsive" title="Economic Substance Regulations (ESR)" alt="Economic Substance Regulations (ESR)" />
        </div>
        <div class="col-md-8">
            <p class="date">8 May 2020</p>
            <h5><a href="@Url.Action("IntroductionESR", "Insight")">The Introduction of Economic Substance Regulations in the UAE</a></h5>
        </div>
    </div>
    <div class="row post">
        <div class="col-md-12 text-left">
            <a href="@Url.Action("Insights", "Page")" class="link">Show More <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
        </div>
    </div>
    <div class="row socialWr">
        <div class="col-md-12 heading">
            <h4>Receive Latest Updates</h4>
        </div>
        <div class="col-md-12">
            @using (Ajax.BeginForm("BlogSidebar", "Insight", new AjaxOptions { HttpMethod = "POST", OnSuccess = "Showmessage" }))
            {
                <div class="row">
                    <div class="col-md-12" style="display: flex;">
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control textFld", @placeholder = "Email Id" })
                            @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "errorValidation" })
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btnSubscribe pull-right" value="Subscribe">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div id="SuccessfulMsg" style="color: green; font-weight: bold"></div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row socialWr">
        <div class="col-md-12 heading">
            <h4>Follow Us</h4>
        </div>
        <div class="col-md-12">
            <ul class="socialIcons">
                <a href="https://www.facebook.com/amcaauditing" target="_blank">
                    <li class="fb">
                        <i class="fa fa-facebook" aria-hidden="true"></i>
                    </li>
                </a>
                <a href="https://www.linkedin.com/company/amcamiddleeast" target="_blank">
                    <li class="in">
                        <i class="fa fa-linkedin" aria-hidden="true"></i>
                    </li>
                </a>
                <a href="https://www.instagram.com/amca.auditing/" target="_blank">
                    <li class="insta">
                        <i class="fa fa-instagram" aria-hidden="true"></i>
                    </li>
                </a>
                <a href="https://amcaauditing.com/" target="_blank">
                    <li class="website">
                        <i class="fa fa-link" aria-hidden="true"></i>
                    </li>
                </a>
                <a href="https://www.youtube.com/watch?v=bcMiiT8Y04s" target="_blank">
                    <li class="youtube">
                        <i class="fa fa-youtube" aria-hidden="true"></i>
                    </li>
                </a>
            </ul>
        </div>
    </div>
</div>