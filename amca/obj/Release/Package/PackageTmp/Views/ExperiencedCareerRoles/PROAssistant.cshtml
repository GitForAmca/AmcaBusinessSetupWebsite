
@{
    ViewBag.Title = "PRO Assistant | Jobs in Dubai";
    ViewBag.PageTitle = "PRO Assistant";
    ViewBag.Keyword = "PRO Assistant, PRO Assistant job description, PRO Assistant jobs, PRO Assistant jobs in dubai, PRO  jobs";
    ViewBag.Description = "Responsible for coordinating and liaising between the company and Government organisations / authorities and provide a key inter-face between them.";
    ViewBag.PROAssistant = "ActiveSubLink";
    ViewBag.Value = "PRO Assistant";
}

@model amca.Models.ExperienceDesignation

<div class="row otherBanner aboutUs lgHeight">
    <div class="container">
        <div class="col-md-12">
            <div class="captionBanner">
                <h1 class="servicesH">@ViewBag.PageTitle</h1>
                <ul>
                    <li><a href="@Url.Action("Index", "Page")">Home</a> </li>
                    <li><a href="@Url.Action("ExperiencedCareerRoles", "Career")">Experienced career roles</a></li>
                    <li>@ViewBag.PageTitle</li>
                </ul>
            </div>
        </div> <!-- end of col-md-12 -->
    </div>
</div> <!-- end of row -->
<div class="row space sidebarFull">
    <div class="container">
        <div class="col-md-3 sidebarHalf">
            @RenderPage("~/Views/Sidebar/CareerSidebar.cshtml")
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12">
                    <p>Roles and Responsibility</p>
                </div>
                <div class="col-md-12 jobDesc">
                    <h4 class="subHeading"><strong>Job Description:</strong></h4>
                    <ul>
                        <li>Should have experience in company/Business formation.</li>
                        <li>Responsible for coordinating and liaising between the company and Government organizations authorities and provide a key inter-face between the two.</li>
                        <li>Provide quick, efficient, and reliable services for all Government related jobs such as Entry Permits, Entry Visas, Medical Examinations, miscellaneous jobs related to Immigration, Ministry of Labor; Consulates, and Business Licenses to the company and its group, adhering to the regular amendments in rules and regulations within very short notices.</li>
                        <li>Should be capable to process Company liquidations and Business set ups in time frame.</li>
                        <li>Responsible for coordinating and liaising between the company and Government organizations</li>
                        <li>Provide quick, efficient and reliable services for all Government related jobs to Business Licenses</li>
                    </ul>

                    <h4 class="subHeading"><strong>Qualifications:</strong></h4>
                    <ul>
                        <li>Experience managing all Government related jobs such as Employment Permits, Entry Visas, Medical Examinations.</li>
                        <li>Knowledge of UAE law and Government regulations and requirements</li>
                        <li>Respond effectively to the demands of the Businesses, employees and assist them on all government related services</li>
                    </ul>
                    <br />
                    @using (Html.BeginForm("SubmitJob", "ExperiencedCareerRoles", FormMethod.Post, new { @class = "primary-form mt-3" }))
                    {
                        @Html.HiddenFor(model => model.JobTitle, new { @class = "form-control textFld", @readonly = "readonly", @ViewBag.Value })
                        <input type="submit" class="btn btnTheme mr0" value="Apply for this position">
                    }
                </div>
            </div>
        </div>
    </div>
</div>




