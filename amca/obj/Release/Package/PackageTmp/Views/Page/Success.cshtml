
@{
    ViewBag.Title = "Thankyou";
    Layout = "~/Views/Shared/_ThankyouLayout.cshtml";
}
@model amca.Models.ExperienceDesignation
@{ 

    string visa = HttpContext.Current.Session["txtPageName"].ToString();
}

@if (visa == "GoldenVisa")
{
    ViewBag.name = "GOLDEN VISA";
    ViewBag.link = "https://goldenvisau.ae/";
}
else if (visa == "GreenVisa")
{
    ViewBag.name = "GREEN VISA";
    ViewBag.link = "https://goldenvisau.ae/";
}
else if (visa == "BusinessVisa") {
    ViewBag.name = "BUSINESS VISA";
    ViewBag.link = "https://www.remotevisa.ae/";

}
else if (visa == "RemoteWorkVisa")
{
    ViewBag.name = "REMOTE WORK VISA";
    ViewBag.link = "https://www.remotevisa.ae/";

}



    <div class="row">
        <div class="msgthankyou">
            <h1>Congratulations!</h1>
            <p>Your request have been successfully submitted.</p>
            <p>Our consultant will get back to you shortly.</p>
            <img src="wimages/mailGraphics.svg" class="img-responsive" alt="AMCA" title="Thank You">

            <br />

            @if (visa == "GreenVisa" || visa == "GoldenVisa" || visa == "RemoteWorkVisa")
            {
                <p>
                    <strong>Click on the below link to get started.</strong>
                </p>
                <p><strong>You can now apply for,</strong></p>
                <ol style="text-align: left">
                    <li><span>@ViewBag.name</span>  Eligibility Assessment</li>
                    <li><span>@ViewBag.name</span>  Eligibility Assessment And Process Assistance</li>
                </ol>
                <br />
                <a class="btn btnTheme" href=@ViewBag.link>APPLY NOW</a>
            }
            <br /> <br />
            <p><a href="@Url.Action("Index", "Page")" style="color: #dca953;"><u><strong>Go To Homepage</strong></u></a></p>

        </div>
    </div>


