@{
    ViewBag.Title = "AMCA Request Proposal | Free zone Company Formation in Dubai";
    ViewBag.PageTitle = "Request Proposal";
    ViewBag.Keyword = "amca,proposal";
    ViewBag.Description = "This Request Proposal focuses on meeting the specific needs of our clients regarding the services that we offer such as Audit & Assurance, Accounting and Bookkeeping, VAT Consulting, Business Set-up, Advisory Services, Economic Substance Regulations (ESR), Ultimate Beneficial Ownership (UBO), and Liquidation/De-Registration.";

}
@model amca.Models.Validation
@using CaptchaMvc.HtmlHelpers;
<div class="row otherBanner aboutUs lgHeight">
    <div class="container">
        <div class="col-md-12">
            <div class="captionBanner">
                <h1 class="servicesH">@ViewBag.PageTitle</h1>
                <ul>
                    <li><a href="@Url.Action("Index", "Page")">Home</a> </li>
                    <li>Request For Proposal</li>
                </ul>
            </div>
        </div> <!-- end of col-md-12 -->
    </div>
</div> <!-- end of row -->
<div class="row space">
    <div class="container">
        <div class="col-md-12">
            <p>This Request Proposal focuses on meeting the specific needs of our clients regarding the services that we offer such as Audit & Assurance, Accounting and Bookkeeping, VAT Consulting, Business Set-up, Advisory Services, Economic Substance Regulations (ESR), Ultimate Beneficial Ownership (UBO), and Liquidation/De-Registration.</p>
        </div>
        <div class="col-md-12 contactUs">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("RequestProposalInsert", "Page", FormMethod.Post, new { @class = "fromB" }))
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.RadioButtonFor(model => model.LeadDataType, "Entity", new { @checked = "checked" }) Entity
                                    @Html.RadioButtonFor(model => model.LeadDataType, "Individual") Individual
                                </div>
                            </div>
                        </div>
                        <div class="row" id="CompanyName">
                            <div class="col-md-12" >
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control textFld", @placeholder = "Company Name" })
                                    @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "errorValidation" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.ConcernPerson, new { @class = "form-control inputB1", @placeholder = "Name" })
                                    @Html.ValidationMessageFor(model => model.ConcernPerson, "", new { @class = "errorValidation" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control inputB1", @placeholder = "Email Id" })
                                    @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "errorValidation" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 pad-rght">
                                <div class="form-group">
                                    @Html.DropDownListFor(model => model.CountryCodeContact, new SelectList(ViewBag.CountryList, "value", "text", "+971"), "Code", new { @class = "form-control inputB1 selectpicker" })
                                    @Html.ValidationMessageFor(model => model.CountryCodeContact, "", new { @class = "errorValidation" })
                                </div>
                            </div>
                            <div class="col-md-8 pad-lft">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.ContactNumber, new { @class = "form-control inputB1 restrictZero", @placeholder = "Contact No" })
                                    @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "errorValidation" })
                                </div>
                            </div>
                        </div>
                        <div class="row" id="TradeLicenseAuthority">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.DropDownListFor(model => model.TradeLicenseAuthority, ViewBag.TradeLicenseAutList as SelectList, "Select Authority", new { @class = "form-control selectpicker" })
                                    @Html.ValidationMessageFor(model => model.TradeLicenseAuthority, "", new { @class = "errorValidation" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.DropDownListFor(model => model.AboutAMCA, ViewBag.AboutAMCA as SelectList, "Where did you hear about AMCA?", new { @class = "form-control textFld" })
                                    @Html.ValidationMessageFor(model => model.AboutAMCA, "", new { @class = "errorValidation" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.DropDownListFor(model => model.Service, ViewBag.Service as SelectList, "Select Service", new { @class = "form-control textFld" })
                                    @Html.ValidationMessageFor(model => model.Service, "", new { @class = "errorValidation" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12" style="color: #ffffff">
                                <div class="form-group homerefresh" id="captcha" style="background-color:#ace1f5">
                                    @Scripts.Render("~/bundles/jquery")
                                    @Html.Captcha("Refresh", "", 5)
                                    @Html.Hidden("txtPageName", "RegulatoryComplianceReporting")
                                    @Html.Hidden("txtPageID", "7")
                                    @Html.ValidationSummary(true)
                                    <p style="color:Red">  @ViewBag.ErrMessage </p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="hidden" id="token" name="token">
                                    <input type="submit" class="btn btnTheme pull-right" value="Request For Proposal">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('.selectpicker').selectpicker({
            liveSearch: true,
            showSubtext: true
        });
    });

    $(document).ready(function () {
        $("select").prop('class', 'selectpicker form-control');
        $("select").attr('data-live-search', true);
    });
    document.getElementById('captcha').getElementsByTagName("input")[1].classList.add("form-control");
    document.getElementById('captcha').getElementsByTagName("input")[1].classList.add("textFld");
    setTimeout(function () {
        document.getElementById('captcha').getElementsByTagName("a")[0].removeAttribute("href");
    }, 500);
</script>

<script>

    $(function () {

        $(':radio[name=LeadDataType]').change(function () {
            if ($(this).val() == "Individual") {
                $("#CompanyName").hide();
                $("#TradeLicenseAuthority").hide();
            }
            else {
                $("#CompanyName").show();
                $("#TradeLicenseAuthority").show();
            }
        });
    });
</script>